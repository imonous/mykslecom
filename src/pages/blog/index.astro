---
import { getCollection } from 'astro:content';

const posts = (await getCollection('blog')).sort(
	(a, b) => b.data.pubDate.valueOf() - a.data.pubDate.valueOf(),
);
---

<!doctype html>
<html lang="en">
	<head>
        <!-- head -->
	</head>
	<body>
        <!-- header -->
		<main>
			<section>
				<ul>
					{
						posts.map((post) => (
							<li>
								<a href={`/blog/${post.id}/`}>
                                    {/* image */}
									<h4 class="title">{post.data.title}</h4>
									<p class="date">
                                        {/* date */}
									</p>
								</a>
							</li>
						))
					}
				</ul>
			</section>
		</main>
		<!-- footer -->
	</body>
</html>
